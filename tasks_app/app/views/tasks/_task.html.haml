= content_tag_for(:tr, task) do
  %td
    - if task.completed
      = link_to "<i class='fa fa-check-square' aria-hidden='true'></i>".html_safe, complete_path(task), remote: true
    - else
      = link_to "<i class='fa fa-square-o' aria-hidden='true'></i>".html_safe, complete_path(task), remote: true
  %td= task.description
  %td= task.created_at.strftime("%m/%d/%Y %-l:%M%P")
  %td{:style => "text-align: center"}
    = link_to "<i class='fa fa-pencil-square' aria-hidden='true'></i>".html_safe+" Edit", edit_task_path(task), remote: true, class: "btn btn-warning btn-sm"
    = link_to "<i class='fa fa-minus-square' aria-hidden='true'></i>".html_safe+" Delete", task, remote: true, method: :delete, class: "btn btn-danger btn-sm"
