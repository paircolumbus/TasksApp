<p id="notice"><%= notice %></p>

<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <% if task.completed %>
      <li><%= link_to "[x] #{task.title}", task %></li>
    <% else %>
      <li><%= link_to "[ &nbsp;] #{task.title}".html_safe, task %></li>
      <%= button_to 'Mark Completed', task, method: :put, params: { 'task[completed]' => true } %>
    <% end %>
    <%= button_to 'Delete', task, method: :delete %>
  <% end %>
</ul>

<hr>

<h2>Create a new task</h2>

<%= render 'form', task: @task %>
