<h1><%= @list.name %></h1>

<ul>
  <%= render @tasks %>
</ul>

<%= form_for [ @list, @task ] do |f| %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <br />
  <%= f.label :submit %>
  <%= f.submit :submit %>
<% end %>
<%= link_to "Delete", list_path(@list), method: :delete %>
<br />
<%= link_to "Home", lists_path %>
