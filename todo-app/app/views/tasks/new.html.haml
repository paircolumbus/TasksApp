%h2 New Task

.col-md-6.col-md-offset-3
  = form_for @task do |f|
    =render 'shared/error_messages'
    
    .form-group
      = f.label :title
      = f.text_field :title, class: 'form-control'
    
    .form-group
      = f.label :description
      = f.text_field :description, class: 'form-control'

    = f.submit 'Submit', class: 'btn btn-primary'
