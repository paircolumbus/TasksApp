%h2 Edit task #{@task.id}

.col-md-6.col-md-offset-3
  = form_for @task do |f|
    .form-group
      = f.label :title
      = f.text_field :title, class: 'form-control'
    
    .form-group
      = f.label :description
      = f.text_field :description, class: 'form-control'

    .form-group
      = f.label :complete
      = f.check_box :complete


    = f.submit 'Submit', class: 'btn btn-primary'